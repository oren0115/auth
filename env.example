# Database
DATABASE_URL=mysql://user:password@localhost:3306/auth_db

# JWT
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email (SMTP - Zoho Mail)
# Note: Use App Password (not regular password) for SMTP_PASSWORD
# Generate App Password: Zoho Mail → Settings → Security → App Passwords
SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
SMTP_USER=your-email@zoho.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@zoho.com

# App
APP_NAME=Auth Service
RESET_TOKEN_EXPIRE_MINUTES=15
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGINS=*

# Security
BCRYPT_ROUNDS=12
